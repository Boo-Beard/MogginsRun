<link href="https://fonts.googleapis.com/css2?family=Bungee+Shade&display=swap" rel="stylesheet">

<style>
/* General Reset */
*, *:before, *:after {
  box-sizing: border-box;
}

body {
  font-family: 'Arial', sans-serif;
  font-size: 16px;
  user-select: none;
  cursor: default;
  margin: 0;
  padding: 0;
}

/* Make Canvas responsive */
canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: auto;
  max-width: 100%;
  display: block;
  border: 1px solid black;
  z-index: 1;
}

/* Styling for Menu */
ul {
  list-style: none;
  margin: 0;
  padding: 0;
}

li {
  padding: 10px 0;
}

a {
  text-decoration: none;
  color: inherit;
  text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;
}

/* Layout Containers */
.wrapper, #menu, #credits {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

#menu {
  text-align: center;
  background-color: grey;
  z-index: 2;
  background-image: url('imgs/menu-bg.png');
}

#menu.credits {
  background-image: url('imgs/credits-bg.png');
}

/* Progress Bar */
#progress {
  height: 12%;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  text-align: center;
}

#percent {
  color: white;
  font-weight: bold;
  text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;
}

#progress-bar {
  width: 200px;
}

/* Sound Icon */
.sound {
  display: none;
  position: absolute;
  top: 10px;
  left: 10px;
  width: 30px;
  height: 25px;
  cursor: pointer;
  z-index: 3;
}

.sound-on {
  background-image: url('imgs/soundOn.png');
  background-repeat: no-repeat;
}

.sound-off {
  background-image: url('imgs/soundOff.png');
  background-repeat: no-repeat;
}

/* Main Game Menu */
#main {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  text-align: center;
  position: relative;
}

#main h1 {
  font-size: 100px;
  font-weight: bold;
  background: linear-gradient(90deg, #ff0080, #00ffcc, #ff00ff, #ff0080, #00d2ff);
  background-size: 400% 100%;
  color: transparent;
  -webkit-background-clip: text;
  animation: gradientAnimation 4s ease-in-out infinite;
  text-shadow: 0 0 15px rgba(255, 255, 255, 0.6), 0 0 20px rgba(255, 0, 255, 0.8);
}

@keyframes gradientAnimation {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

#game-logo {
  position: absolute;
  top: 15%;
  left: 50%;
  transform: translateX(-50%);
  max-width: 100%;
  height: auto;
  z-index: 1;
}

/* Button Styling */
.button {
  display: block;
  width: 220px;
  margin: 15px auto;
  height: 70px;
  line-height: 70px;
  border: 2px solid #FF1493;
  color: white;
  font-weight: bold;
  font-size: 26px;
  font-family: 'Bungee Shade', sans-serif;
  text-shadow: 0 0 10px #FFFFFF, 0 0 20px #FF1493, 0 0 30px #FF1493, 0 0 40px #00FFFF;
  background: linear-gradient(145deg, #00FFC6, #FF1493);
  border-radius: 10px;
  cursor: pointer;
  padding: 0 25px;
  text-align: center;
  transition: transform 0.2s, box-shadow 0.2s, background-color 0.3s;
  position: relative;
  overflow: hidden;
}

.button:hover {
  background: linear-gradient(145deg, #FF1493, #00FFC6);
  transform: scale(1.1);
  box-shadow: 0 0 20px #FF1493, 0 0 30px #00FFFF, 0 0 40px #FFFFFF;
}

.button:focus {
  outline: none;
  box-shadow: 0 0 10px 2px #00FFFF, 0 0 20px 2px #FF1493;
}

.button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 300%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.5), transparent);
  transform: skewX(-45deg);
  transition: 0.5s;
  z-index: 1;
}

.button:hover::before {
  left: 100%;
  transition: 0.5s;
}

/* Responsive Adjustments */
@media (max-width: 768px) {
  .button {
    font-size: 22px;
    width: 90%;
    height: 60px;
  }

  canvas {
    height: 80%;
  }

  #main h1, #game-over h2 {
    font-size: 24px;
  }
}

@media (max-width: 480px) {
  canvas {
    width: 100%;
    height: auto;
  }

  .button {
    width: 200px;
    height: 60px;
    font-size: 20px;
  }

  #progress, #credits {
    display: none;
  }

  #game-over {
    width: 100%;
    padding-top: 20px;
  }
}
</style>
