/* General Reset */
*, *:before, *:after {
  box-sizing: border-box;
}

body {
  font-family: arial, sans-serif;
  font-size: 16px;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  cursor: default;
  margin: 0;
  padding: 0;
}

/* Make Canvas responsive */
canvas {
  position: absolute;
  top: 0;
  left: 0;
  border: 1px solid black;
  z-index: 1;
  height: auto; /* Adjust height based on width */
  width: 100%;
  max-width: 100%; /* Prevent the canvas from exceeding the screen width */
  display: block;  /* Remove unwanted white spaces around the canvas */
}


/* Basic Styling for Menu */
ul {
  list-style: none;
  padding: 0;
  margin: 0;
}
li {
  padding: 10px 0;
}

a {
  text-decoration: none;
  color: inherit;
  text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;
}

.wrapper {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

/* Menu Styles */
#menu {
  position: absolute;
  width: 100%;
  height: 100%;
  border: 1px solid black;
  z-index: 2;
  text-align: center;
  background-color: grey;
}
#menu.main {
  background-image: url('imgs/menu-bg.png');
}
#menu.credits {
  background-image: url('imgs/credits-bg.png');
}

/* Progress Bar */
#progress {
  height: 12%;
  margin: auto;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}
#percent {
  color: white;
  font-weight: bold;
  text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;
}
#progress-bar {
  width: 200px;
}

/* Sound Icon */
.sound {
  display: none;
  position: absolute;
  top: 10px;
  left: 10px;
  width: 30px;
  height: 25px;
  cursor: pointer;
  z-index: 3;
}
.sound-on {
  background-image: url('imgs/soundOn.png');
  background-repeat: no-repeat;
}
.sound-off {
  background-image: url('imgs/soundOff.png');
  background-repeat: no-repeat;
}

/* Main Game Menu */
#main {
  display: none;
  height: 60%;
  overflow: auto;
  margin: auto;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}
@keyframes gradientAnimation {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}
#main {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%; /* Make sure the container takes up the full height */
  text-align: center;
  position: relative; /* Required for absolute positioning of the image */
}

#main h1 {
  font-size: 90px; /* Bigger text for more impact */
  font-weight: bold;
  background: linear-gradient(90deg, 
    #ff0080, /* Neon Pink */
    #00ffcc, /* Electric Cyan */
    #ff00ff, /* Neon Purple */
    #ff0080, /* Neon Pink */
    #00d2ff /* Miami Blue */
  );
  background-size: 400% 100%; /* Makes the gradient move more dramatically */
  color: transparent;
  -webkit-background-clip: text; /* Make the gradient only affect the text */
  animation: gradientAnimation 4s ease-in-out infinite; /* Slow down the animation for more retro effect */
  text-shadow: 0 0 15px rgba(255, 255, 255, 0.6), 0 0 20px rgba(255, 0, 255, 0.8); /* Intense glow effect */
}

#game-logo {
  position: absolute;
  top: -60px; /* Adjust to position the image where you want */
  left: 50%; /* Center the image horizontally */
  transform: translateX(-50%); /* Center the image exactly */
  max-width: 100%;
  height: auto;
  z-index: 1; /* Make sure it stays above other elements */
}
/* General Button Styling */
.button {
  display: block;
  width: 200px; /* Adjust the width to fit larger screens */
  margin: 10px auto; /* Center the buttons with some space around */
  height: 60px; /* Increase the height for better touch target */
  line-height: 60px; /* Vertically center the text within the button */
  border: 1px solid #AA2666;
  color: white;
  font-weight: bold;
  font-size: 24px; /* Make text larger for better readability */
  text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;
  background-color: #FB1886;
  background-image: -webkit-linear-gradient(bottom, #FB1886 0%, #B30D5D 100%);
  background-image: linear-gradient(to bottom, #FB1886 0%, #B30D5D 100%);
  border-radius: 5px;
  cursor: pointer;
  padding: 0 20px; /* Add horizontal padding for larger clickable area */
  transition: background-color 0.3s, transform 0.2s; /* Smooth transition for hover */
  text-align: center; /* Ensures text is centered horizontally */
}

.button:hover {
  background-color: #B30D5D;
  background-image: -webkit-linear-gradient(bottom, #B30D5D 0%, #FB1886 100%);
  background-image: linear-gradient(to bottom, #B30D5D 0%, #FB1886 100%);
  transform: scale(1.05); /* Slightly enlarge the button on hover */
}

/* Button Focus (for accessibility) */
.button:focus {
  outline: none;
  box-shadow: 0 0 5px 2px rgba(0, 0, 0, 0.2); /* Outline for accessibility when focused */
}

/* Mobile-Specific Button Styling (with media queries) */

/* For screens up to 768px (tablets and mobile devices) */

/* Make buttons and text larger on mobile */
@media (max-width: 768px) {
  .button {
    font-size: 22px;
    width: 90%;  /* Make buttons nearly full width */
    height: 60px; /* Increase button height */
  }

  canvas {
    height: 80%; /* Let the canvas take more height on mobile */
  }
}

/* For very small screens (up to 480px) */
@media (max-width: 480px) {
  .button {
    font-size: 24px;  /* Further increase font size for readability */
    height: 70px;
  }
   canvas {
    height: 70%; /* Optimize the canvas height for very small screens */
  }
}

/* Credits */
#credits {
  display: none;
  line-height: 30px;
  margin: auto;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}
#credits li {
  padding: 5px 0;
}

.artwork, .music, .developer {
  text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;
}

.artwork {
  color: #fa8526;
}
.music {
  color: #e6e71f;
}
.developer {
  color: #13eb8a;
}

.back, .back:hover {
  margin-top: 10px;
}

/* Game Over Screen */
#game-over {
  display: none;
  text-align: center;
  padding-top: 92px;
  z-index: 1;
  width: 100%;
  height: 100%;
  position: absolute;
}

/* Media Queries for Mobile Devices */
@media (max-width: 768px) {
  /* Adjust canvas to fit smaller screens */
  canvas {
    width: 100%;
    height: auto;
  }

  /* Increase button size for touch devices */
  .button {
    width: 180px;  /* Wider buttons */
    height: 50px;
    line-height: 50px;
    font-size: 18px; /* Bigger text */
  }

  /* Make wrapper and menu take full screen */
  .wrapper, #menu {
    width: 100%;
    height: 100%;
  }

  /* Adjust header and game-over text */
  #main h1, #game-over h2 {
    font-size: 24px;  /* Bigger text */
  }
}

@media (max-width: 480px) {
  /* Make canvas more responsive */
  canvas {
    width: 100%;
    height: auto;
  }

  /* Reduce font size for small screens */
  body {
    font-size: 14px;
  }

  /* Adjust button size for very small screens */
  .button {
    width: 200px;
    height: 60px;
    line-height: 60px;
    font-size: 20px;  /* Even bigger text for small screens */
  }

  /* Hide progress bar and credits on very small screens */
  #progress, #credits {
    display: none;
  }

  /* Simplify layout for small screens */
  #game-over {
    width: 100%;
    padding-top: 20px;
  }
}
