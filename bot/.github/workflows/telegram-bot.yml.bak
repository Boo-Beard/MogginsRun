name: Telegram Bot

on:
  push:
    branches:
      - main  # Trigger the bot when there is a push to the "main" branch

jobs:
  bot:
    runs-on: ubuntu-latest  # GitHub will use a hosted Ubuntu runner

    steps:
    - name: Checkout code
      uses: actions/checkout@v2  # Check out the code in the repository

    - name: Set up Node.js
      uses: actions/setup-node@v2
      with:
        node-version: '14'  # Specify the Node.js version

    - name: Install dependencies
      run: npm install  # Install dependencies from package.json

    - name: Run Telegram bot
      run: npm start  # Start the bot
